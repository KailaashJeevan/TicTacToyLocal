<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        android:gravity="center"
        android:background="@color/orange"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_marginRight="3pt"
                android:layout_width="wrap_content"
                android:layout_marginEnd="3pt"

                android:layout_height="40pt" android:id="@+id/B00" android:onClick="buClicked"/>
        <Button
                android:layout_marginRight="3pt"
                android:layout_width="40pt"
                android:layout_marginEnd="3pt"

                android:layout_height="40pt" android:id="@+id/B01"
                android:onClick="buClicked"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/B02"
                android:onClick="buClicked"/>
    </TableRow>
    <TableRow

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_marginRight="3pt"
                android:layout_marginEnd="3pt"
                android:onClick="buClicked"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/B10"/>
        <Button
                android:layout_marginRight="3pt"
                android:onClick="buClicked"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/B11" android:layout_marginEnd="3pt"/>
        <Button
                android:layout_width="40pt"
                android:onClick="buClicked"
                android:layout_height="40pt" android:id="@+id/B12"/>
    </TableRow>
    <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_marginRight="3pt"
                android:layout_marginEnd="3pt"

                android:onClick="buClicked"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/B20"/>
        <Button
                android:layout_marginRight="3pt"
                android:layout_marginEnd="3pt"
                android:onClick="buClicked"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/B21"/>
        <Button
                android:layout_width="40pt"
                android:onClick="buClicked"
                android:layout_height="40pt" android:id="@+id/B22"/>
    </TableRow>
</TableLayout>